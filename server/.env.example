PORT=5000
DISABLE_AUTH=true

# MongoDB
MONGODB_URI=mongodb://localhost:27017/agentichire

# JWT (needed even in no-auth mode for token generation routes)
JWT_SECRET=dev_secret_change_in_prod

# Cloudinary (for resume uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Groq (FREE — resume screening via Llama 3.3 70B)
# Get key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# ElevenLabs Conversational AI (AI Voice Interview)
# Get key at: https://elevenlabs.io/app/settings/api-keys
# Create agent at: https://elevenlabs.io/app/conversational-ai
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_AGENT_ID=your_elevenlabs_agent_id

# Google Gemini (FREE tier — evaluation & live interview agent)
# Get key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key
GEMINI_LIVE_MODEL=gemini-2.0-flash-live
GEMINI_EVAL_MODEL=gemini-2.0-flash

# Redis (optional — BullMQ evaluation queue, disabled if not set)
# REDIS_URL=redis://localhost:6379

# Internal agent auth
AGENT_INTERNAL_API_KEY=your_internal_key_here

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
MAIL_FROM="AgenticHire <noreply@agentichire.com>"

# ── Telegram Bot ─────────────────────────────────────────────────
# 1. Message @BotFather on Telegram → /newbot → get bot token
# 2. Set the token below, start your server, then call POST /api/telegram/setup
#    with { "webhookUrl": "https://your-domain.com" } to register the webhook
TELEGRAM_BOT_TOKEN=               # From @BotFather (e.g. 123456:ABC-DEF...)
TELEGRAM_WEBHOOK_URL=             # Your public server URL (e.g. https://abc.ngrok-free.app)
TELEGRAM_DEFAULT_HR_ID=           # MongoDB ObjectId of default HR user for Telegram-created jobs
TELEGRAM_TRIGGER_KEYWORD=CREATE JOB  # HR must start messages with this keyword

# ── Cron Schedules ───────────────────────────────────────────────
# Auto-rejection cron: check expired deadlines + shortlist top N
AUTO_REJECT_CRON="0 * * * *"       # Every hour (default)
# Pipeline advancement cron: open the next stage for active candidates
PIPELINE_CRON="30 * * * *"         # Every hour at :30 (default)